@model HairSalonApp.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1>Anuluj wizytę</h1>

<h3>Czy na pewno chcesz anulować tę wizytę?</h3>
<div>
    <h4>Wizyta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hairdresser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hairdresser.Firstname)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Anuluj" class="btn btn-danger" /> |
        <a class="btn btn-outline-success" asp-action="Index">Powrót</a>
    </form>
</div>
