@model IEnumerable<HairSalonApp.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Usługi</h1>

@if (User.IsInRole("Hairdresser"))
{
    <p>
        <a class="btn btn-outline-success" asp-action="Create">+ Dodaj nową usługę</a>
    </p>
}
<div class="container bg-light rounded-4 p-4">
    <table class="table table-light">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @((item.Duration / 60).ToString("0.##")) godz.
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                        @if (User.IsInRole("Hairdresser"))
                        {
                            <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
